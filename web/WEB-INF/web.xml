<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--设置编码-->
    <filter>
        <filter-name>
            encodingFilter
        </filter-name>
        <filter-class>
            com.CRUD.filter.EncodingFilter
        </filter-class>
        <init-param>
            <param-name>
                en
            </param-name>
            <param-value>
                utf-8
            </param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>
            encodingFilter
        </filter-name>
        <url-pattern>
            /*
        </url-pattern>
    </filter-mapping>
    <!--//过滤器：使用过滤器防止未登录用户访问商品展示页面和商品详情页-->
    <filter>
        <filter-name>
            authFilter
        </filter-name>
        <filter-class>
            com.CRUD.filter.AuthFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>
            authFilter
        </filter-name>
        <url-pattern>
            /*
        </url-pattern>
    </filter-mapping>
    <!--界面-->
    <servlet>
        <servlet-name>
            goodServlet
        </servlet-name>
        <servlet-class>
            com.CRUD.servlet.GoodServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>
            goodServlet
        </servlet-name>
        <url-pattern>
            /goodServlet
        </url-pattern>
    </servlet-mapping>

    <!-- 下载文件 -->
    <servlet>
        <servlet-name>downloadServlet</servlet-name>
        <servlet-class>com.CRUD.servlet.DownloadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>downloadServlet</servlet-name>
        <url-pattern>/downloadServlet</url-pattern>
    </servlet-mapping>
    <!-- 登录页面 -->
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.CRUD.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <!-- 注册页面 -->
    <servlet>
        <servlet-name>registerServlet</servlet-name>
        <servlet-class>com.CRUD.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registerServlet</servlet-name>
        <url-pattern>/registerServlet</url-pattern>
    </servlet-mapping>
</web-app>